<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/basket_Card"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:layout_marginStart="25dp"
    android:layout_marginTop="15dp"
    android:layout_marginRight="2dp"
    android:layout_marginBottom="15dp"
    android:background="@drawable/shape_item_on_board_right"
    android:clipToPadding="false"
    android:orientation="horizontal"
    android:visibility="visible"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    tools:visibility="visible">

    <org.raphets.roundimageview.RoundImageView
        android:id="@+id/basket_roundImageView"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@drawable/action1"
        app:border_color="@android:color/white"
        app:border_width="0dp"
        app:leftBottom_corner_radius="0dp"
        app:leftTop_corner_radius="30dp"
        app:rightTop_corner_radius="0dp"
        app:type="round" />

    <TextView
        android:id="@+id/name_left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/futura_lt"
        android:gravity="center"
        android:scaleY="1.3"
        android:shadowColor="#221818"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:text="@{seans.name}"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/basket_kolvo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/basket_roundImageView"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="aaaa" />

    <TextView
        android:id="@+id/basket_kolvo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/futura_lt"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:text="@{seans.date}"
        android:textColor="#EF5959"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="ccc" />

    <TextView
        android:id="@+id/basket_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/futura_lt"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:text="@{seans.times}"
        android:textColor="#EF5959"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/basket_roundImageView"
        tools:text="bbb" />
</androidx.constraintlayout.widget.ConstraintLayout>
